@model IEnumerable<WebApplication17.Models.Friends>


<script language="JavaScript" type="text/javascript">
    $(document).ready(function () {
        $("#dropdown").click(function () {
            var text = $("#valName").text();
            var edit = $("#toName").val();
            console.debug(edit);
                if (edit == "") {

                    $("#toName").val(text);


                } else {
                    $("#toName").val(edit + "," + text);
                }
        });
    });

</script>
<div class="form-group">
    @Html.Label("Do:", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.Editor("toName", new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="dropdown col-md-offset-2 col-md-2">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
            Znajomi
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            @foreach (var item in Model)
            {
                <li id="dropdown"><p id="valName" style="text-align:center;"> @item.Friend.UserName</p></li>
            }
        </ul>
    </div>
</div>

