@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Wyszukaj znajomego</h2>
@using (Ajax.BeginForm("UserList", "Friends",
                        new AjaxOptions
                        {
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "searchResults"
                        }))
{

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-8">
                @Html.Editor("FriendName", new { htmlAttributes = new { @class = "form-control", @id = "Keyword" } })
            </div>
            <div class="col-md-2">

                <input type="submit" value="Szukaj" class="list-group-item list-group-item-info" />

            </div>
        </div>
    </div>
}

<div id="searchResults">
    
</div>